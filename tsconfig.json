{
  "compilerOptions": {
    /* Basic Options */
    "jsx": "react",
    "lib": [
      "dom",
      "es2018"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "newLine": "LF",
    "target": "es5",
    /* Strict Type-Checking Options */
    "strict": true,
    /* Additional Checks */
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true
  },
  "include": [
    "src"
  ]
}
